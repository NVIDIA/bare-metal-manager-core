[Unit]
Description=Forge DPU OpenTelemetry mTLS certificate renewal agent service
After=network.target
StartLimitIntervalSec=300
StartLimitBurst=5

[Service]
ExecStart=ip vrf exec mgmt /usr/bin/forge-dpu-otel-agent --config-path=/etc/forge-dpu-otel-agent/config.toml run
KillMode=mixed
Restart=always
RestartSec=5

Type=simple
User=root
Group=root

[Install]
WantedBy=multi-user.target

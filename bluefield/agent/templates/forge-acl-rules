[iptables]
# Prevent the host from talking to the infrastructure prefixes.
{{- $prefixes := .DenyPrefixes }}
{{- $interfaces := .IngressInterfaces }}
{{- range $prefix := $prefixes }}
{{- range $interface := $interfaces }}
-A FORWARD -i {{ $interface }} -d {{ $prefix }} -j DROP
{{- end }}
{{- end }}

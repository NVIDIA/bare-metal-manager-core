<%#
kind: PXEGrub2
name: PXEGrub2 global default
model: ProvisioningTemplate
%>
<%- mac = @host.provision_interface.mac.gsub(':', '-') -%>

default=<%= global_setting("default_pxe_item_global", "local") %>
timeout=4

menuentry 'Install Ubuntu/20.04 AArch64 - BlueField 3.8.5.12027' --class red --class gnu-linux --class gnu --class os {
  linux /bluefield-3.8.5.12027/vmlinuz ro ip=dhcp console=ttyAMA0 console=hvc0 bfks=<%= foreman_url('finish')%> bfmac="<%= mac %>:dhcp"
  initrd /bluefield-3.8.5.12027/initramfs
}

menuentry 'Chainload into bootloader on first disk' --id local_chain_legacy_hd0 {
  set root=(hd0,gpt1)
  chainloader /EFI/ubuntu/shimaa64.efi
  boot
}
